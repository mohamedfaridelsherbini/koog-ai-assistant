# DigitalOcean Configuration for Koog AI Assistant
# Copy this file to terraform.tfvars and fill in your values

# DigitalOcean API Token (required)
# Get this from: https://cloud.digitalocean.com/account/api/tokens
do_token = "your_digitalocean_api_token_here"

# Environment
environment = "production"

# DigitalOcean Region
# Options: nyc1, nyc3, sfo3, sgp1, fra1, ams3, lon1, tor1, blr1
region = "nyc3"

# Your Domain
domain_name = "mohamedfaridelsherbini.com"

# Kubernetes Cluster Configuration
node_size   = "s-2vcpu-4gb"  # 2 vCPUs, 4GB RAM
node_count  = 2
min_nodes   = 1
max_nodes   = 5

# Tags for organization
tags = [
  "koog-ai",
  "production",
  "ai-assistant",
  "ollama"
]
